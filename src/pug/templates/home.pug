ion-view
	ion-content(padding="true")
		.list.card
			.item.item-avatar
				img(ng-src="{{current_user.get('image')}}")   
				h2 {{current_user.get('name')}} {{current_user.get('surname')}}
				p Age: {{current_user.get('age')}}
			.item.item-divider Code abilities:
			.item.item-body
				.list
					.item.item-icon-left(ng-repeat="skill in current_user.get('can_code')")
						i.icon.ion-ionic.calm
						| {{skill}}

			.item.item-divider Updated At: {{current_user.get('updated_at') | date: 'short'}}

		.row
			.col.text-center
				p 
					b Current time: 
					| {{ current_time | date: 'mediumTime' }}